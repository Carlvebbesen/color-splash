//tsconfig
{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": false,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",

      "paths": {
          "*": [
              "node_modules/",
              "src",
              "../"
          ]
      }
  },
  "include": [
      "src/**/*"
      ]
}
